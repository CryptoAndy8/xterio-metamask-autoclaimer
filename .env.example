#######################################################################
# XTERIO METAMASK AUTOCLAIMER — ENV CONFIG
# Кожен рядок KEY=VALUE. Без лапок. Шляхи — краще з прямими слешами.
# Приклад: D:/Temp  (а не "D:\Temp")
#######################################################################

############################
# ВХІДНІ ДАНІ (ОБОВ’ЯЗКОВО)
############################
# Файл із приватними ключами (по одному на рядок; рядки з # ігноруються)
KEYS_FILE=D:/ScriptsCrypto/xterio-metamask-autoclaimer-main/keys.txt

# Як трактувати KEYS_FILE:
#  - pk  : кожен рядок — приватний ключ (0x... або без 0x)
#  - seed: кожен рядок — сид-фраза
KEY_MODE=pk

# Пароль для MetaMask (використовується при створенні/розблокуванні)
WALLET_PASSWORD=StrongPass123!

# (Опційно) сид-фраза для імпорту існуючого гаманця замість створення нового
# Залиш порожнім, якщо не потрібно
WALLET_SEED=

# Цільова сторінка з клеймом (твій Xterio-URL)
TARGET_URL=https://app.xter.io/airdrop/1b13f586-53bf-4827-8c17-5deed560653d
# (Alias для зручності; код використовує TARGET_URL, але залишив і це)
XTERIO_URL=https://app.xter.io/airdrop/1b13f586-53bf-4827-8c17-5deed560653d

############################
# БРАУЗЕР / МЕТАМАСК
############################
# Версія MetaMask, яку тягне dappwright (перевірена 13.3.0; 12.23.0 теж ок)
METAMASK_VERSION=13.3.0

# Запускати безголово? (true/false)
HEADLESS=false

# Тимчасова тека (dappwright/Playwright профілі). Має існувати.
TEMP_DIR=D:/Temp

# (Опційно) Шлях до Chrome/Chromium. Якщо порожньо — Playwright сам обере.
# Приклад для Chrome:
CHROME_PATH=C:/Program Files/Google/Chrome/Application/chrome.exe

# (Опційно) Власний профіль браузера (корисно для ручної діагностики)
# Якщо не треба — залиш порожнім
USER_DATA_DIR=D:/ScriptsCrypto/xterio-metamask-autoclaimer-main/.manual_profile

# (Опційно/НЕ потрібно зазвичай) Локальний шлях до MetaMask-розширення.
# Dappwright сам завантажує потрібну версію; використовуй тільки якщо знаєш навіщо.
METAMASK_PATH=

############################
# ЧАСИ/РЕТРАЇ (КАСТОМІЗАЦІЯ)
############################
# Скільки разів пробувати claim для одного ключа при помилці
CLAIM_RETRIES=2

# Затримка між ключами (мс)
DELAY_BETWEEN_KEYS_MS=1500

# Таймаути очікувань сторінки/селекторів (мс)
PAGE_TIMEOUT_MS=45000
SELECTOR_TIMEOUT_MS=12000


############################
# МЕРЕЖА (якщо скрипт додає кастомну)
############################
# NETWORK_NAME=Scroll
# RPC_URL=https://rpc.ankr.com/scroll
# CHAIN_ID=534352
# CHAIN_SYMBOL=ETH


############################
# ДЕБАГ/СЕРВІСНІ
############################
# Рівень логів: silent | info | debug
LOG_LEVEL=info

# Для сумісності з dappwright/playwright (зазвичай не чіпати)
TEST_PARALLEL_INDEX=0
